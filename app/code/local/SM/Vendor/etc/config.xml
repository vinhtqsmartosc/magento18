<?xml version="1.0"?>
<config>
    <modules>
        <SM_Vendor>
            <version>0.1.1</version>
        </SM_Vendor>
    </modules>

    <frontend>
        <routers>
            <vendor>
                <use>standard</use>
                <args>
                    <module>SM_Vendor</module>
                    <frontName>vendors</frontName>
                </args>
            </vendor>
        </routers>

        <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </frontend>

    <global>
        <models>
            <sm_vendor>
                <class>SM_Vendor_Model</class>
            </sm_vendor>
            <sm_vendor_resource>
                <class>SM_Vendor_Model_Resource</class>
                <entities>
                    <vendors>
                        <table>vendor</table>
                    </vendors>
                </entities>
            </sm_vendor_resource>
        </models>
        <blocks>
            <sm_vendor>
                <class>SM_Vendor_Block</class>
            </sm_vendor>
        </blocks>
        <helpers>
            <sm_vendor>
                <class>SM_Vendor_Helper</class>
            </sm_vendor>
        </helpers>
        <resources>
            <sm_vendor_setup>
                <setup>
                    <module>SM_Vendor</module>
                </setup>
            </sm_vendor_setup>
        </resources>
    </global>
</config>